<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css" type="text/css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>

        <form action="/search" method="post">
                <div class="container">
                    <div class="row">
                        <div class="jumbotron">
                            <form action="/search" method="post">
                                <div class="row">
                                <div class="col-md-4">
                            <div class="form-group">
                                <label for="items">Pez! Awesome!!!</label>
                                <input type="text" id="search_item" name="search_item" class='form-control'><br>
                            </div>
                            <button class="btn btn-success" type="submit">Search for pez!</button>
                        </div>
                    </div>
                            </form>
                        <form action="/results" method="post">
                        </div>
                        <div class="col-md-6">
                            <h1>Add some pez dispensers, yo!</h1>
                        <div class="form-group">
                            <label for="items">Pez! Awesome!!!</label>
                            <input type="text" id="items" name="items" class='form-control'><br>
                        </div>
                        <button class="btn btn-success" type="submit">Add a Pez Dispenser!</button>
                        </form>
              <form action="/delete_inventory" method="get">
                  <button class="btn btn-success" type="submit">Delete inventory</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                {% if items is not empty %}
                <h1>Inventory</h1>
                    {% for item in items %}
                    <li>{{ item.getDescription }}</li>
                    {% endfor %}
                {% endif %}
            </div>
          </div>
        </div>

    </body>
</html>
